# Backend Environment Variables
# Copy this to .env and fill in your values

# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com

# Database (PostgreSQL) - For production
# USE_SQLITE=false
# POSTGRES_DB=fundi
# POSTGRES_USER=fundi_user
# POSTGRES_PASSWORD=your-password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# For demo/development - Use SQLite
USE_SQLITE=true

# Redis (optional)
USE_REDIS=false
# REDIS_URL=redis://localhost:6379/1

# CORS - Add your frontend URL
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend.vercel.app

# Security
SECURE_SSL_REDIRECT=false
